<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}SPaget - Gestion des User Stories{% endblock %}</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="{{ asset('css/app.css') }}" rel="stylesheet">
    
    {% block stylesheets %}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header -->
    {% include 'partials/header.html.twig' with {
        'total_sp': total_sp ?? 650,
        'capacity': capacity ?? 400,
        'delta': delta ?? -250
    } %}
    
    <!-- Layout principal -->
    <div class="app-layout">
        <!-- Sidebar -->
        {% include 'partials/sidebar.html.twig' %}
        
        <!-- Zone de contenu principal -->
        <div class="main-wrapper">
            <!-- Contenu de la page -->
            <main class="main-content">
                {% block body %}{% endblock %}
            </main>
            
            <!-- Right Panel -->
            <div class="right-panel-container" id="right-panel-container">
                {% include 'partials/right-panel.html.twig' %}
            </div>
        </div>
    </div>
    
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="{{ asset('js/app.js') }}"></script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>
